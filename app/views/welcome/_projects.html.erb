 <div class="mt-3 container">
    <% @projects.each do |project| %>
      <a href="<%= project_path(project)%>" class="text-dark" data-local="true"> 
        <div class="ddd float-left">
          <div class="card bg-light o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
               <!--  <img src="http://localhost:3000/assets/favicon.png" width=112> -->
               <%= image_tag image_path('favicon.png'), width:112 %>
              </div>
              <div class="mr-5">
                <%= truncate project.details,length:35%>
              </div>
            </div>
            <div class="card-footer text-black clearfix small z-1" href="#">
              <span class="float-left"><%=project.name%></span>
              <span class="float-right text-primary mr-5"><%=project.ranking%></span>
            </div>
          </div>
        </div>
       </a>      
    <%end%>
    
  </div>


