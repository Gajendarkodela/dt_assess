<% if flash[:notice].present? %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
<%= render :template => "projects/new" %>
<% @projects.each do |project| %>
  <a  href="projects/<%= project.id%>">
    <div class="col-xl-4 col-sm-6 mb-4" style="float:left">
      <div class="card text-white bg-light o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon">
            <i class="fa fa-fw fa-file-code-o"></i>
          </div>
          <div class="mr-5"><%= project.ranking%>)
                            <%= project.details%>
          </div>
        </div>
        <a class="card-footer text-black clearfix small z-1" href="#">
          <span class="float-left"><%=project.name%></span>
            <span class="float-right">
              <i class="fa fa-angle-right"></i>
            </span>
        </a>
      </div>
    </div>
   </a>      
<%end%>




    
