<%= form_with model: @project,id:"my-form" do |form|%>
  <div class="modal-body mx-3">
    <div class="md-form mb-4" >
      <div class="input-group">
        <div class="input-group-addon bg-secondary infield">
          <i class="fa fa-book prefix text-white mt-3 booki"></i>  
        </div>
        <%= form.text_field :name,placeholder:"Project Name",class: "form-control", id: "pro"%>
      </div>
      <div id="error-name" class="text-danger"></div>
    </div>
    <div class="md-form mb-4">
      <div class="input-group">
        <div class="input-group-addon bg-secondary infield">
          <i class="fa fa-hand-o-right prefix text-white mt-3 booki"></i>
        </div>
        <%= form.number_field :ranking,placeholder:"Ranking", class: "form-control"%>
      </div>
      <div id="error-ranking" class="text-danger"></div>
    </div>
    <div class="md-form mb-4">
      <div class="input-group">
        <div class="input-group-addon bg-secondary infield">
          <i class="fa fa-at prefix text-white mt-4 booki"></i>
        </div>
        <%= form.text_area :details,placeholder: "Details", class: "form-control"%>    
      </div>
      <div id="error-details" class="text-danger"></div>
    </div>
  </div>     
  <div class="modal-footer d-flex justify-content-center">  
    <%= form.submit class: 'btn btn-primary bdd'%>
  </div>
<%end%>
